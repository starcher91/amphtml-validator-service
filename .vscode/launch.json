    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Process",
            "type": "node",
            "request": "attach",
            "protocol": "inspector",
            "port": 9229,
            "restart": true,
            "localRoot": "${workspaceRoot}/src",
            "remoteRoot": "/var/www/app/src",
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/dist/**/*.js"]
        }
    ]
}